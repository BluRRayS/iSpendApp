
@{
    ViewData["Title"] = "Login";
}
<div class="col-lg-1" style="float: none; margin-left: auto; margin-right: auto; width: 80%";>
    <div class="panel-group">
        <div class=" panel panel-default text-center">
            <div class="panel-heading"><h1>Login</h1></div>
            <div class="row">
                <div class="text-center">
                    <img src="/images/AccountIcon.svg" style="width: 150px; height: 100%;" /><br />
                    <form asp-controller="User" asp-action="Login">
                        <input name="userName"  class="form-control" type="text" placeholder="Username" style="margin: auto" /><br />
                        <input name="password" class="form-control" type="password" placeholder="Password" style="margin: auto" /><br />
                        <input class="btn" type="submit" placeholder="Login" style="margin: auto" /><br />
                        <br/>
                        <a asp-area="" asp-controller="Home" asp-action="Register">Don't have an account yet?</a><br/>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>






