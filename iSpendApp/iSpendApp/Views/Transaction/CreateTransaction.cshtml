@model iSpendApp.Models.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Add a transaction";
}

<h2>CreateTransaction</h2>

<h4>New Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Transaction" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Account" asp-action="Accounts">Back to List</a>
</div>

