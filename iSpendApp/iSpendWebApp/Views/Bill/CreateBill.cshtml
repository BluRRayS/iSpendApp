@using Microsoft.AspNetCore.Http
@model iSpendWebApp.Models.Bill.BillViewModel

@{
    ViewData["Title"] = "CreateBill";
    var imagePath = "";
}


<h2>CreateBill</h2>

<h4>BillViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BillName" class="control-label"></label>
                <input asp-for="BillName" class="form-control" />
                <span asp-validation-for="BillName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillBalance" class="control-label"></label>
                <input asp-for="BillBalance" class="form-control" />
                <span asp-validation-for="BillBalance" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-xs-3">
                    <p>Preview:</p>
                </div>
                <div class="col-xs-3">
                    <div id="ImgDisplay" class="panel-default"></div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        <label asp-for="IconId" class="control-label"></label>
                        <select asp-for="IconId" class="form-control" id="IdMenu">
                            @for (var file = 0; file < Model.TotalIcons - 1; file++)
                            {
                                imagePath = Url.Content("~/Icons/Bill/" + file + ".png");
                                <option value="@imagePath" data-icon="@imagePath">@file</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="IconId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    $("#IdMenu").on('change', function () {
        $('#ImgDisplay').empty();
        $('#ImgDisplay').append('<img src="' + $(this).val() + '" />');
    });
</script>
