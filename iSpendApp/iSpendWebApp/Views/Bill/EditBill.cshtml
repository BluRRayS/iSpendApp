@model iSpendWebApp.Models.BillViewModel

@{
    ViewData["Title"] = "EditBill";
}

<h2>EditBill</h2>

<h4>BillViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Bill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BillName" class="control-label"></label>
                <input asp-for="BillName" class="form-control" value="@Model.BillName"/>
                <span asp-validation-for="BillName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IconId" class="control-label"></label>
                <input asp-for="IconId" class="form-control" value="@Model.IconId" />
                <span asp-validation-for="IconId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Bill">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
