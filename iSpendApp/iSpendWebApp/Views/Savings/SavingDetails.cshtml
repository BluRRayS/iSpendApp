
@using iSpendWebApp.Models.Savings
@model iSpendWebApp.Models.Savings.SavingsViewModel

@{
    ViewData["Title"] = "SavingDetails";
}
@*Modal RemoveSaving*@
<div class="modal fade" id="DeleteSavingModal" tabindex="-1" role="dialog" aria-labelledby="AddReservationModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center">Reserve Money</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="~/Views/Savings/DeleteSavingPartial.cshtml" model="@new SavingsViewModel(){SavingId = Model.SavingId}" />
            </div>
        </div>
    </div>
</div>

<h2>SavingDetails</h2>

<div class="row">
    <!-- Button trigger modal AddReservation -->
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteSavingModal">
        Delete Saving
    </button>
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.SavingId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SavingId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SavingName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SavingName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SavingCurrentAmount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SavingCurrentAmount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SavingsGoalAmount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SavingsGoalAmount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IconId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IconId)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SavingId }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.SavingId }) |
    <a asp-action="Index">Back to List</a>
</div>
