
@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="text-center">Dashboard</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="well">
                <canvas id="CategoryChart">
                </canvas>
            </div>
        </div>
        <div class="col-md-6">
            <div class="well">
                <canvas id="SavingChart">
                </canvas>
            </div>
        </div>
        <div class="col-md-12">

            <div class="well">
                <canvas id="AccountChart">

                </canvas>
            </div>
        </div>
    </div>
</div>

@* Category Chart *@
<script>
    var ctx = document.getElementById('CategoryChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(ViewBag.Categories),
            datasets: [{
                label: 'Expenditure for each Category',
                data: @Html.Raw(ViewBag.CategoriesCosts),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>
 
@* Saving Chart *@
<script>
    var ctx = document.getElementById('SavingChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(ViewBag.Categories),
            datasets: [{
                label: 'Expenditure for each Category',
                data: @Html.Raw(ViewBag.CategoriesCosts),
            }]
        },
        options: {

        }
        
    });
</script>

@* Account Chart *@
<script>
    var ctx = document.getElementById('AccountChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: @Html.Raw(ViewBag.Categories),
            datasets: [
                {
                    label: 'Expenditure for each Category',
                    data: @Html.Raw(ViewBag.CategoriesCosts),
                }
            ]
        },
        options: {

        }
    });
</script>