@using iSpendWebApp.Models.Transaction
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model IEnumerable<iSpendWebApp.Models.Transaction.TransactionsViewModel>

@{
    ViewData["Title"] = "Transactions";

}

<h2 class="text-center" align="center">@ViewBag.BillName</h2>
<h2 class="text-center" align="center">€@Model.Sum(model => model.TransactionAmount)</h2>
<hr />



<!-- Modal Create Transaction -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center">Add deposit/withdrawal</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="~/Views/Transaction/CreateTransaction.cshtml" model="@new TransactionsViewModel(ViewBag.BillId, ViewBag.FileProvider)"/>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="btn-group">
        <!-- Button trigger modal CreateTransaction -->
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
            Create new Transaction
        </button>
        <input type="button" value="Edit Bill" class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "Bill", new {id = ViewBag.BillId})'" />
        <input type="button" value="Delete Bill" class="btn btn-danger" onclick="location.href = '@Url.Action("Delete", "Bill", new {id = ViewBag.BillId})'" />
        <!-- Button trigger modal AddReservation -->
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#AddReservationModal">
            Reserve Money
        </button>
    </div>
</div>

@*Model AddReservation*@
<div class="modal fade" id="AddReservationModal" tabindex="-1" role="dialog" aria-labelledby="AddReservationModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center">Reserve Money</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="~/Views/Savings/CreateReservationPartial.cshtml" model="@new ReservationViewModel(){AccountId = ViewBag.BillId}" />
            </div>
        </div>
    </div>
</div>
<hr/>
<table id="TransactionTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOfTransaction)
            </th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @{
                            var imageName = ViewBag.FileProvider[item.IconId];
                            var imagePath = Url.Content("~/Icons/Category/" + imageName);
                        }
                        <img src="@imagePath" alt="Icons/Category/0.png" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TransactionName)
                    </td>
                    @if (item.TransactionAmount >= 0)
                    {
                        <td style="color: limegreen">
                            @Html.DisplayFor(modelItem => item.TransactionAmount)
                        </td>

                    }

                    @if (item.TransactionAmount < 0)
                    {
                        <td style="color: red">
                            @Html.DisplayFor(modelItem => item.TransactionAmount)
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeOfTransaction)
                    </td>
                    <td>
                        <input type="button" value="Edit" class="btn btn-warning" onclick="location.href = '@Url.Action("Edit", "Transaction", new {id = item.TransactionId, billId = ViewBag.BillId})'" />
                        <input type="button" value="Delete" class="btn btn-danger" onclick="location.href = '@Url.Action("Delete", "Transaction", new {id = item.TransactionId, billId = ViewBag.BillId})'" />
                    </td>
                </tr>
            }
        </tbody>
    }
</table>

<script>
    $(document).ready( function () {
        $('#TransactionTable').DataTable();
    } );
</script>