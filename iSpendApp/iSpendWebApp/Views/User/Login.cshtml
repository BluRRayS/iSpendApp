@model iSpendWebApp.Models.User.UserViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <div class="row" style="margin-top: 10%;">
        <div class="col-md-4 center-block" style="float: none">
            <div class=" panel panel-default">
                <div class="panel-heading text-center" align="center"><h4>Login</h4></div>
                <form asp-controller="User" asp-action="Login">
                    <div class="panel-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <a class="text-center" style="margin-left:26%" asp-controller="User" asp-action="Create">don't have an account yet?</a>
                    </div>
                    <div class="form-group center-block">
                        <input type="submit" value="Login" class="btn btn-success" style="margin-left: 43%" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
